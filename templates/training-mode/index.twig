{% extends "base.twig" %}
{% block title %}Training Mode{% endblock %}
{% block body %}
    <h1>Select new training to start</h1>
    <hr>
    {% for training in trainings %}
        <div class="row">
            <div class="col-md-6">
                <h2 class="gh-training-name">{{ training.name }}</h2>
            </div>
            <div class="col-md-6 row">
                {% if training.trainingInstance %}                    
                    <div class="col-md-6"><a class="gh-continue-training-button btn btn-warning" href="{{ path('training_mode_show', {"id": training.trainingInstance.id}) }}">Continue</a></div>
                    <div class="col-md-6"><a class="gh-restart-training-button btn btn-danger" href="{{ path('training_mode_restart', {"id": training.trainingInstance.id}) }}">Restart</a></div>
                {% else %}
                    <div class="col-md-12"><a class="gh-start-training-button btn btn-success" href="{{ path('training_mode_start', {"id": training.id}) }}">Start</a></div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
    <hr>
    <div class="row">
        <div class="col-md-4"><a class="btn btn-secondary" href="{{ path('home') }}">Back</a></div>
    </div>
{% endblock %}