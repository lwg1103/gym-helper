{% extends 'base.twig' %}
{% block title %}{{ training.name }}{%  endblock %}
{% block body %}
    <h1 class="gh-training-name">{{ training.name }}</h1>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>excercise</th>
                <th>weight</th>
                <th>repeats</th>
                <th>break [sec]</th>
                <th>result</th>
            </tr>
        </thead>
        {% for excercise in training.excercises %}
            {% if excercise.result == 0 %}
                <tr>
                    <td class="gh-excercise-name">{{ excercise.name }}</td>
                    <td>{{ excercise.weight }}</td>
                    <td>{{ excercise.repeats }}</td>
                    <td>{{ excercise.breakTime }}</td>
                    <td>
                        <a 
                            class="gh-excercise-hard btn btn-danger" 
                            href="{{ path('training_mode_hard_excercise', {"id": excercise.id}) }}"
                            >
                            Hard
                        </a>
                        <a 
                            class="gh-excercise-ok btn btn-warning" 
                            href="{{ path('training_mode_ok_excercise', {"id": excercise.id}) }}"
                            >
                            Ok
                        </a>
                        <a 
                            class="gh-excercise-easy btn btn-success" 
                            href="{{ path('training_mode_easy_excercise', {"id": excercise.id}) }}"
                            >
                            Easy
                        </a>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-secondary" href="{{ path('training_mode_index') }}">
                Back
            </a>
        </div>
        <div class="col-md-6">
            <a 
                class="gh-finish-training btn btn-primary" 
                href="{{ path('training_mode_finish', {"id": training.baseTraining.id}) }}"
                >
                Finish Training
            </a>
        </div>
    </div>
{% endblock %}