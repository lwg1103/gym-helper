{% extends "base.twig" %}
{% block title %}Trainings{% endblock %}
{% block body %}
<h1>Your trainings:</h1>
<hr>
{% for training in trainings %}
    <div class="row">
        <div class="col-md-6"><h2>{{ training.name }}</h2></div>
        <div class="col-md-6"><a href="{{ path('training_delete', {'id': training.id}) }}">delete training</a></div>
    </div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>excercise</th>
                    <th>weight</th>
                    <th>repeats</th>
                    <th>series</th>
                    <th>break [sec]</th>
                    <th>range</th>
                </tr>
            </thead>
            {% for excercise in training.excercises %}
                    <tr>
                        <td>{{ excercise.name }}</td>
                        <td>{{ excercise.weight }}</td>
                        <td>{{ excercise.repeats }}</td>
                        <td>{{ excercise.series }}</td>
                        <td>{{ excercise.breakTime }}</td>
                        <td>{{ excercise.min }} - {{ excercise.max }}</td>
                    </tr>
            {% endfor %}
        </table>
{% endfor %}
<hr>
<p><a href="{{ path('training_new') }}">add training</a></p>
<p><a href="{{ path('home') }}">back</a></p>
{% endblock %}